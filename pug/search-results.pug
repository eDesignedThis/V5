extends shopping.pug

block shopping-content 
    .row
        .col-12.text-center
            h1#page-title Search Results

        .col-12.col-sm-3
            p.lead Filter Results
            p.font-weight-bold Departments
            ul.list-group.list-group-flush#departments
                //- Output department list here 
                //- li.list-group-item.border-0 
                //-     a(href='#') Item
              


        .col-12.col-sm-9#search-results
            include ../pug/includes/components/shopping/shopping-breadcrumb.pug
            include ../pug/includes/components/shopping/shopping-horizontal-filter-bar.pug


            .row
                .col-12.text-center
                    h2.section-title Reward Yourself
                    include ../././pug/includes/components/shopping/shopping-carousel.pug
            .row
                .col-12.text-center
                    h2.section-title Feautured Products
                    include ../././pug/includes/components/shopping/shopping-featured-products.pug
            .row.justify-content-center
                .col-12
                    include ../././pug/includes/components/shopping/search-results-pagination.pug
            
            .row.justify-content-center 
                .col-12.text-center.text-muted
                    small Some content is provided by a third party on an as-is basis. This content is subject to change and/or removal at any time. Points and availability of items are subject to change.

        
    
        
