nav.mx-auto#search-pagination(aria-label='Page navigation example')
    ul.pagination.justify-content-center
        li.page-item
            a.page-link.prev-btn(href='#' aria-label='Previous')
                span.mr-1(aria-hidden='true') &laquo;
                span Previous
        li.page-item
            a.page-link(href='#') 1
        li.page-item
            a.page-link(href='#') 2
        li.page-item
            a.page-link(href='#') 3
        li.page-item
            a.page-link.next-btn(href='#' aria-label='Next')
                span.mr-1 Next
                span(aria-hidden='true') &raquo;